<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contador de Productos"
        android:textSize="30dp"
        android:layout_gravity="center"/>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="30dp"
        android:layout_gravity="center">



        <Button
            android:id="@+id/btn1"
            android:layout_height="80dp"
            android:text="Producto 1:"
            android:layout_column="0"
            android:layout_row="1"
            android:backgroundTint="#bc1f26"/>

        <Button
            android:id="@+id/btn2"
            android:layout_height="80dp"
            android:text="Producto 2:"
            android:layout_column="1"
            android:layout_row="1"
            android:backgroundTint="#8b164f"/>

        <Button
            android:id="@+id/btn3"
            android:layout_height="80dp"
            android:text="Producto 3:"
            android:layout_column="2"
            android:layout_row="1"
            android:backgroundTint="#4b2087"/>

        <Button
            android:id="@+id/btn4"
            android:layout_height="80dp"
            android:text="Producto 4:"
            android:layout_column="0"
            android:layout_row="2"
            android:backgroundTint="#30268d"/>

        <Button
            android:id="@+id/btn5"
            android:layout_height="80dp"
            android:text="Producto 5:"
            android:layout_column="1"
            android:layout_row="2"
            android:backgroundTint="#1e379e"/>

        <Button
            android:id="@+id/btn6"
            android:layout_height="80dp"
            android:text="Producto 6:"
            android:layout_column="2"
            android:layout_row="2"
            android:backgroundTint="#004b9c"/>

        <Button
            android:id="@+id/btn7"
            android:layout_height="80dp"
            android:text="Producto 7:"
            android:layout_column="0"
            android:layout_row="3"
            android:backgroundTint="#004b9c"/>

        <Button
            android:id="@+id/btn8"
            android:layout_height="80dp"
            android:text="Producto 8:"
            android:layout_column="1"
            android:layout_row="3"
            android:backgroundTint="#006063"/>

        <Button
            android:id="@+id/btn9"
            android:layout_height="80dp"
            android:text="Producto 9:"
            android:layout_column="2"
            android:layout_row="3"
            android:backgroundTint="#004e43"/>

    </GridLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Usuario"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/btUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Escribe el usuario aqui"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Correo Electronico"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/btEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Escribe el correo aqui"
        />

    <Button
        android:id="@+id/btSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        android:layout_gravity="center"/>

</LinearLayout>