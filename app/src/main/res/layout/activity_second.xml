<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:fontFamily="serif-monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Factura|Detalle"
        android:textSize="30dp" />

    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/tvUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Usuario:"
        android:textSize="23dp" />

    <TextView
        android:fontFamily="sans-serif-condensed-light"
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Correo:"
        android:textSize="23dp" />

    <TextView
        android:fontFamily="sans-serif-condensed-light"
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Total de productos:"
        android:textSize="23dp" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:padding="30dp">


        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b1"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#bc1f26"
            android:text="Producto 1:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b2"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#8b164f"
            android:text="Producto 2:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b3"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#4b2087"
            android:text="Producto 3:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b4"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#30268d"
            android:text="Producto 4:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b5"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#1e379e"
            android:text="Producto 5:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b6"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="#004b9c"
            android:text="Producto 6:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b7"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#004b9c"
            android:text="Producto 7:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b8"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1"
            android:backgroundTint="#006063"
            android:text="Producto 8:" />

        <Button
            android:textColor="#fff"
            android:clickable="false"
            android:id="@+id/b9"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="2"
            android:backgroundTint="#004e43"
            android:text="Producto 9:" />

    </GridLayout>

    <Button
        android:textColor="#fff"
        android:id="@+id/btShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#2A77B6"
        android:text="SHARE" />

</LinearLayout>